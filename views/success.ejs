  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background: #f9fafb;
      color: #333;
      text-align: center;
    }

    /* ===== NAVBAR ===== */
    .navbar {
      display: flex;
      justify-content: flex-start;
      align-items: center;
      padding: 12px 40px;
      background-color: #ffffff;
      border-bottom: 1px solid #e2e8f0;
    }
    .navbar .nav-left {
      display: flex;
      align-items: center;
      gap: 40px;
    }
    .navbar .logo img {
      max-height: 50px;
    }
    .navbar nav a {
      margin: 0 15px;
      text-decoration: none;
      color: #1a3c7c;
      font-weight: 600;
      position: relative;
    }
    .navbar nav a:hover {
      color: #4caf50;
    }
    .navbar nav a::after {
      content: "";
      position: absolute;
      width: 0%;
      height: 2px;
      bottom: -4px;
      left: 0;
      background-color: #4caf50;
      transition: width 0.3s ease-in-out;
    }
    .navbar nav a:hover::after {
      width: 100%;
    }

    /* ===== SUCCESS BOX ===== */
    .success-box {
      max-width: 600px;
      margin: 80px auto;
      background: #ffffff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .success-box h2 {
      color: #4caf50;
      margin-bottom: 20px;
    }
    .success-box a {
      display: inline-block;
      margin-top: 10px;
      padding: 10px 20px;
      background: #1a3c7c;
      color: #ffffff;
      text-decoration: none;
      font-weight: 600;
      border-radius: 6px;
      transition: background 0.3s ease;
    }
    .success-box a:hover {
      background: #4caf50;
    }

