      font-weight: 600;
      position: relative;
    }
    .navbar nav a:hover {
      color: #4caf50;
    }
    .navbar nav a::after {
      content: "";
      position: absolute;
      width: 0%;
      height: 2px;
      bottom: -4px;
      left: 0;
      background-color: #4caf50;
      transition: width 0.3s ease-in-out;
    }
    .navbar nav a:hover::after {
      width: 100%;
    }

